<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/field0"
        android:layout_width="80dp"
        android:layout_height="40dp"
        layout="@layout/ourbutton" />

    <include
        android:id="@+id/field1"
        layout="@layout/ourbutton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/field0"
        />

    <TextView
        android:id="@+id/field2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="button"
        android:layout_toRightOf="@id/field1"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="button"
        android:layout_toRightOf="@id/field1"
        />

    <TextView
        android:id="@+id/field3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="button"
        android:layout_below="@id/field1"
        android:layout_toStartOf="@id/field4"
        />

    <TextView
        android:id="@+id/field4"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="button"
        android:layout_below="@id/field1"
        android:layout_toStartOf="@+id/field5"
        />

    <TextView
        android:id="@id/field5"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/field0"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="button"
        />

</RelativeLayout>